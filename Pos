using System;
using System.Collections.Generic;

namespace POS
{
    public class PosOop
    {
        private List<ItemsName> Item = new List<ItemsName>();
        private Dictionary<int, int> _stock = new Dictionary<int, int>();
        private Dictionary<int, int> _numOfQty = new Dictionary<int, int>();

        public void DefaultValues()
        {
            Item.Add(new ItemsName() {Id = 1, Iteam = "Pen", Prices = 5});
            Item.Add(new ItemsName() {Id = 2, Iteam = "Shirt", Prices = 100});
            Item.Add(new ItemsName() {Id = 3, Iteam = "Cap", Prices = 50});

            for (int i = 0; i < Item.Count; i++)
            {
                _stock.Add(Item[i].Id,1);
                
            }
        }

        public void ProductShow()
        {
            Console.WriteLine("ID \tIteam \tPrice");
            Console.WriteLine("-- \t----- \t-----");
            foreach (var item in Item)
            {
                Console.WriteLine(item.Id+ "\t" + item.Iteam + "\t" + item.Prices +"\n");
  
            }
        }

        public void CustomerChoice()
        {
            ProductShow();

            Console.WriteLine("Press 0 to proceed checkout and 1 to Exit ");
            var Choice = Convert.ToInt32(Console.ReadLine());

            if (Choice == 0)
            {
                CustomerBuy();
            }
            else if (Choice ==1)
            {
                Exit();
            }
            else
            {
                Console.WriteLine("Worng Choice! Please Try Again");
                ProductShow();
            }
        }

        public void CustomerBuy()
        {
            Console.WriteLine("Please enter item to buy");
            var iteambuy = Convert.ToInt32(Console.ReadLine());

            switch (iteambuy)
            {
                case 1:
                    Console.WriteLine("");
                    break;
            }

          

        }

        public void Exit()
        {
            Console.WriteLine("You Are now Exit");
        }


    }
}
